{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Address",
  "type": "object",
  "properties": {
    "street": {
      "type": "string"
    },
    "city": {
      "type": "string"
    },
    "state": {
      "type": "string"
    },
    "postalCode": {
      "type": "string",
      "pattern": "^[0-9]{5}(-[0-9]{4})?$"
    }
  },
  "required": ["street", "city", "state", "postalCode"]
}
